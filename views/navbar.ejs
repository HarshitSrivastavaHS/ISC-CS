
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<style>
    * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
    }
header {
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
    background-color: #fff;
    padding: 20px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 15px 15px rgba(0,0,0,0.05);
    z-index: 10;
}
.logo {
    color: #333;
    text-decoration: none;
    font-size: 1.5em;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: .1emf;
}

.group {
    display: flex;
    align-items: center;
}

header ul {
    position: relative;
    display: flex;
    gap: 30px;
    transform: translateY(35%);
}

header ul li {
    list-style: none;
}

header ul li a {
    position: relative;
    text-decoration: none;
    font-size: 1em;
    color: #333;
    text-transform: uppercase;
    letter-spacing: 0.2em;
}

header ul li a::before {
    content: '';
    position: absolute;
    bottom: -2px;
    width: 100%;
    height: 2px;
    background-color: #333;
    transform: scaleX(0);
    transition: transform 0.5s ease-in-out;
    transform-origin: right;
}

header ul li a.active::before {
    transform: scaleX(1);
}

header ul li a:hover::before {
    transform: scaleX(1);
    transform-origin: left;
}

header .search {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.5em;
    z-index: 10;
}

header .searchBox {
    position: absolute;
    transform: scaleX(0);
    right: -100%;
    width: 100%;
    visibility: hidden;
    height: 100%;
    display: flex;
    background-color: #fff;
    align-items: center;
    padding: 0 30px;
    transition: 0.5s ease-in-out;
}

header .searchBox.active {
    transform: scaleX(1);
    visibility: visible;
    right: 0%;
}

.searchBox form {
    width: 100%;
}

.searchBox input {
    width: 100%;
    border: none;
    outline: none;
    height: 50px;
    color: #333;
    font-size: 1.25em;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

.searchBtn, .closeSearchBtn {
    position: relative;
    top: 2.5px;
    opacity: 0;
    visibility: hidden;
    transition: 0.5s ease-in-out;
    cursor: pointer;
}
.searchBtn {
    left: 60px
}
.closeSearchBtn {
    left: 30px;
}

.searchBtn.active, .closeSearchBtn.active {
    opacity: 1;
    visibility: visible;
}

.searchBtn.active {
    left: 30px;
}

.closeSearchBtn.active {
    left: 0px;
}

.menuToggle {
    position:relative;
    display: none;
}

@media(max-width: 960px) {
    header ul {
        transform: translateY(0);
    }

    header .searchBtn.active {
        left: 0px;
    }
    header .closeSearchBtn.active {
        left: -30px;
    }

    header .menuToggle {
        position: absolute;
        display: block;
        font-size: 2em;
        cursor: pointer;
        transform: translateX(30px);
        z-index: 10;
    }

    header .navigation {
        position: absolute;
        opacity: 0;
        visibility: hidden;
        transform: scale(0);
        left: 100%;
    }
    header {
        position: sticky;
        transition: .5s ease-in-out;
    }
    header.open {
        position: fixed;
    }
    header.open .navigation {
        top: 80px;
        opacity: 1;
        visibility: visible;
        transform: scale(1);
        left: 0;
        display: flex;
        flex-direction: column;
        background-color: #fff;
        width: 100%;
        height: calc(100vh - 80px);
        padding: 40px;
        border-top: 1px solid rgba(0,0,0,0.05);
        overflow-y: scroll;
    }

    header.open .navigation li a {
        font-size: 1.25em;
    }
}
</style>
<header>
  <a href="/" class="logo">JAVA CS</a>
  <div class="group">
      <ul class="navigation">
          <li><a class="<%= active=='home'?'active':'' %>" href="/">Home</a></li>
          <li><a class="<%= active=='years'?'active':'' %>" href="/year">Year-wise Programs</a></li>
          <li><a class="<%= active=='extra'?'active':'' %>" href="/extras">Extras</a></li>
          <li><a class="<%= active=='all'?'active':'' %>" href="/all">All Programs</a></li>
          <li><a class="<%= active=='about'?'active':'' %>" href="/about">About</a></li>
      </ul>
      <div class="search">
          <span class="icon">
              <ion-icon name="search-outline" class="searchBtn active"></ion-icon>
              <ion-icon name="close-outline" class="closeSearchBtn"></ion-icon>
          </span>
      </div>
      <ion-icon name="menu-outline" class="menuToggle"></ion-icon>
  </div>
  <div class="searchBox">
    <form action="/search" method="get" role="search">
      <input type="search" name="query" placeholder="Search for programs...">
    </form>
  </div>
</header>

<script>
  let searchBtn = document.querySelector('.searchBtn');
  let closeBtn = document.querySelector('.closeSearchBtn');
  let searchBox = document.querySelector('.searchBox');
  let header = document.querySelector('header');
  let menuToggle = document.querySelector('.menuToggle');
  let navigation = document.querySelector('.navigation');

  searchBtn.onclick = function() {
      searchBox.classList.add('active');
      closeBtn.classList.add('active');
      searchBtn.classList.remove('active');
  }

  closeBtn.onclick = function() {
      searchBox.classList.remove('active');
      searchBtn.classList.add('active');
      closeBtn.classList.remove('active');
  }

  menuToggle.onclick = function() {
      header.classList.toggle('open');
  }
</script>



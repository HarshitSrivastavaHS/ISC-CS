<!DOCTYPE html>
<html>
  <head>
    <title>All Programs</title>
    <%- include("common") %>
  </head>
  <body>
    <%- include('navbar') %>
    <div class="mx-auto my-4" style="width: 85%">
      <h4>All Programs <%- `(${programs.length})` %></h4>
      <ul class="list-group mx-auto">
         <% [...programs].reverse().map((program, index)=>{ %>
            <a class="link-dark text-decoration-none" href="/program/<%=program.id%>">
            <li class="list-group-item d-flex justify-content-between align-items-center  <%- index%2==0?'bg-body-tertiary':''%>">
            <%- program.name.replace(/\\n/g, "<BR>") %>
              <span class="badge bg-primary rounded-pill"><%-program.years.length>0?program.years.join(", "):"Extra"%></span>
            </li>
            </a>
        <% }) %>
      </ul>
    </div>
    <ul>
       
    </ul>
  </body>
</html>